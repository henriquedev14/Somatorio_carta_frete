from math import *

# Funções
def negativa():
    print('-'*50)
    print('A CARTA FRETE NÃO PODE SER TROCADA NESTE POSTO!')
    print('-'*50)

def documentacao():
    print('A DOCUMENTAÇÃO JÁ FOI TODA CONFERIDA, TEM O TICKET BALANÇA, CARTA VIA SALDO E DACTE?')
    doc = input('1 - SIM   2 - NÃO: ')

    if doc == '2':
        negativa()
    elif doc != '1':
        print('-' * 50)
        print('OPÇÃO INVÁLIDA! INSIRA UMA OPÇÃO VÁLIDA!')
        print('-' * 50)
        documentacao()
    else:
        entrada()

def entrada():
    pesoSaida = input('INFORME O PESO DE SAÍDA: ')
    pesoDescarregado = input('INFORME O PESO QUE ESTÁ NO TICKET BALANÇA: ')
    tolerancia = input('INFORME A TOLERANCIA EM %: ')
    ppt = input('INFORME O VALOR DO FRETE COMBINADO (PPT): ')
    descontos = input('INFORME O VALOR TOTAL DOS DESCONTOS: ')

    # Verificação de valores inválidos
    try:
        pesoSaida = float(pesoSaida)
        pesoDescarregado = float(pesoDescarregado)
        tolerancia = float(tolerancia)
        ppt = float(ppt)
        descontos = float(descontos)
    except ValueError:
        print('-' * 50)
        print('VALORES INSERIDOS INVÁLIDOS! INSIRA NOVAMENTE.')
        print('-' * 50)
        entrada()
        return

    # Cálculo da tolerância de perda da carga
    pode_perder = tolerancia * pesoSaida
    diferenca_de_peso = pesoSaida - pesoDescarregado

    if diferenca_de_peso <= pode_perder:
        if pesoDescarregado <= pesoSaida:
            valor = pesoDescarregado * ppt
            print('O VALOR DO FRETE É: {:.2f}'.format(valor/1000))
            print('O VALOR A SE PAGAR PELA CARTA FRETE É : R$ {:.2f}'.format((valor/1000)-descontos))
    else:
        parcial = input('DIGITE:\n1 - DESCONTO PARCIAL ou 2 - DESCONTO INTEGRAL:\n')

        # Verificação de valores inválidos
        if parcial != '1' and parcial != '2':
            print('-' * 50)
            print('OPÇÃO INVÁLIDA! INSIRA UMA OPÇÃO VÁLIDA!')
            print('-' * 50)
            entrada()
            return

        valor
